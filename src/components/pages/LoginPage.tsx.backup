          {/* Navigation Links */}
          <div className="text-center space-y-2">
            <Button
              type="button"
              variant="link"
              onClick={() => switchToDialog('forgot-password')}
              className="text-sm"
            >
              Forgot your password?
            </Button>
            <div className="text-sm text-muted-foreground">
              Don't have an account?{' '}
              <Button
                type="button"
                variant="link"
                onClick={() => switchToDialog('register')}
                className="p-0 h-auto font-semibold"
              >
                Sign up
              </Button>
            </div>
          </div>
        </form>
    </CustomModal>
  );

  const RegisterModal = () => (
